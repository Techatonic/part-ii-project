{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Root Schema",
  "required": [
    "sports",
    "general_constraints",
    "tournament_length"
  ],
  "properties": {
    "sports": {
      "type": "array",
      "default": [],
      "title": "The sports Schema",
      "items": {
        "type": "object",
        "title": "A Schema",
        "required": [
          "name",
          "venues",
          "teams",
          "num_teams_per_game",
          "is_knockout",
          "group_stage",
          "min_start_day",
          "max_finish_day",
          "min_start_time",
          "max_finish_time",
          "duration",
          "constraints"
        ],
        "properties": {
          "name": {
            "type": "string",
            "title": "The name Schema",
            "examples": [
              "football",
              "tennis",
              "boxing_heavyweight"
            ]
          },
          "venues": {
            "type": "array",
            "title": "The venues Schema",
            "items": {
              "type": "object",
              "title": "A Schema",
              "properties": {
                "name": {
                  "type": "string",
                  "title": "The name Schema",
                  "examples": [
                    "Stamford Bridge",
                    "Olympic Stadium",
                    "Emirates Stadium",
                    "Tottenham Hotspur Stadium",
                    "Wimbledon_Centre_Court",
                    "Wimbledon_Court_1",
                    "Wimbledon_Court_2",
                    "Wimbledon_Court_3",
                    "Excel_1",
                    "Excel_2"
                  ]
                },
                "location_coordinates": {
                  "type": "array",
                  "title": "The location_coordinates Schema",
                  "items": {
                    "type": "number",
                    "title": "A Schema",
                    "examples": [
                      51.4817,
                      -0.1910
                    ]
                  }
                },
                "location_address": {
                  "type": "string",
                  "title": "The location_address Schema",
                  "examples": [
                    "Fulham Rd., London SW6 1HS"
                  ]
                },
                "location_postcode": {
                  "type": "string",
                  "title": "The location_postcode Schema",
                  "examples": [
                    "SW6 1HS"
                  ]
                },
                "min_start_time": {
                  "type": "integer",
                  "title": "The min_start_time Schema"
                },
                "max_finish_time": {
                  "type": "integer",
                  "title": "The max_finish_time Schema"
                },
                "capacity": {
                  "type": "integer",
                  "title": "The capacity Schema"
                },
                "max_matches_per_day": {
                  "type": "integer",
                  "title": "The max_matches_per_day Schema"
                }
              }
            }
          },
          "teams": {
            "type": "array",
            "title": "The teams Schema",
            "items": {
              "type": "string",
              "title": "Team name",
              "examples": ["Great Britain", "Novak Djokovic"]
            }
          },
          "num_teams_per_game": {
            "type": "integer",
            "title": "The num_teams_per_game Schema"
          },
          "is_knockout": {
            "type": "boolean",
            "title": "The is_knockout Schema"
          },
          "group_stage": {
            "type": "null",
            "title": "The group_stage Schema"
          },
          "min_start_day": {
            "type": "integer",
            "title": "The min_start_day Schema"
          },
          "max_finish_day": {
            "type": "integer",
            "title": "The max_finish_day Schema"
          },
          "min_start_time": {
            "type": "integer",
            "title": "The min_start_time Schema"
          },
          "max_finish_time": {
            "type": "integer",
            "title": "The max_finish_time Schema"
          },
          "duration": {
            "type": [
              "number",
              "integer"
            ],
            "title": "The duration Schema",
            "examples": [
              1.5,
              3,
              1
            ]
          },
          "constraints": {
            "type": "array",
            "title": "The constraints Schema",
            "items": {
              "type": "string",
              "title": "A Schema"
            },
            "examples": [
              [
                "same_venue_overlapping_time",
                "no_later_rounds_before_earlier_rounds",
                "same_venue_max_matches_per_day",
                "time_between_matches"
              ]
            ]
          }
        }
      },
      "general_constraints": {
        "type": "array",
        "default": [],
        "title": "The general_constraints Schema",
        "items": {
          "type": "string",
          "title": "A Schema",
          "examples": [
            "same_venue_overlapping_time",
            "same_venue_max_matches_per_day"
          ]
        },
        "tournament_length": {
          "type": "integer",
          "default": 0,
          "title": "The tournament_length Schema",
          "examples": [
            14
          ]
        }
      }
    }
  }
}